% 创建定理类环境
% \RequirePackage{theorem}
\RequirePackage{ntheorem} % 无编号定理格式的宏包
\theoremstyle{nonumberplain} % 无编号定理，与ntheorem宏包对应
\newtheorem{caution}{注意  }[section]
\newtheorem{_warning}{\color{red} 警告  }[section]
\newtheorem{_risk}{\color{red} 风险点  }[section]
\newtheorem{Q}{问题 }
\newtheorem{A}{参考 }
\newenvironment{risk}{
	\begin{_risk}
    \color{red}
}%开始部分定义
{\end{_risk}}%结束部分定义
\newenvironment{warning}{
	\begin{_warning}
    \color{red}
}%开始部分定义
{\end{_warning}}%结束部分定义

