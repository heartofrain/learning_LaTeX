\ProvidesPackage{xyzsettings} % 本宏包名，必须与文件名一致

% 调整页面大小
\RequirePackage{geometry}
\geometry{a4paper,margin=2cm}

% 定义蓝色：
\RequirePackage{xcolor}
\definecolor{xyzcolor}{RGB}{1,126,218}

% 标题左对齐、大小及颜色：
\RequirePackage{titlesec}
\titleformat*{\section}{\normalfont\Large\bfseries\color{xyzcolor}}
\titleformat*{\subsection}{\normalfont\large\bfseries\color{xyzcolor}}
\titleformat*{\subsubsection}{\normalfont\normalsize\bfseries\color{xyzcolor}}

% 设置列表环境行间距：
\RequirePackage{enumitem}
\setenumerate[1]{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=3pt}
\setitemize[1]{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=3pt}
\setdescription{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=3pt}
\setenumerate[2]{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=3pt}
\setitemize[2]{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=3pt}

% 浮动体支持 H 参数
